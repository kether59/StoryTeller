# ================================
# Stage 1: Builder
# ================================
FROM python:3.11-slim as builder

WORKDIR /app

# Installer les dépendances système nécessaires pour la compilation
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copier les requirements et installer les dépendances
COPY requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# Télécharger le modèle spaCy (optionnel, pour analyse NLP)
RUN python -m spacy download fr_core_news_md || echo "spaCy model download skipped"

# ================================
# Stage 2: Runtime
# ================================
FROM python:3.11-slim

# Métadonnées
LABEL maintainer="your-email@example.com"
LABEL version="2.0"
LABEL description="StoryTeller API Backend"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH=/root/.local/bin:$PATH \
    DATABASE_URL=sqlite:///./data/storyteller.db

# Créer un utilisateur non-root pour la sécurité
RUN useradd -m -u 1000 appuser && \
    mkdir -p /app/data && \
    chown -R appuser:appuser /app

WORKDIR /app

# Copier les dépendances Python depuis le builder
COPY --from=builder /root/.local /root/.local

# Copier le code de l'application
COPY --chown=appuser:appuser . .

# Créer le répertoire pour la base de données avec les bonnes permissions
RUN mkdir -p /app/data && chown -R appuser:appuser /app/data

# Exposer le port
EXPOSE 8000

# Passer à l'utilisateur non-root
USER appuser

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/', timeout=5)" || exit 1

# Commande par défaut
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]